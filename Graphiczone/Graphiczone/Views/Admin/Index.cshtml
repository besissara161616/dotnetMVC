
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <style>
        .display-4{
            font-weight:bold;
        }
        .card-body-icon{
            position:absolute;
            z-index:0;
            top:25px;
            right:4px;
            opacity:0.4;
            font-size:90px;
        }
        .card {
            box-shadow: 1px 3px 5px 0px rgba(0,0,0,0.75);
        }
    </style>
    <h1>Dashboard</h1>
    <div class="container">
        <div class="row" style="margin-bottom:2%">
            <div class="col-md-4" style="margin-bottom:2%;color:#0026ff">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-wallet mr-2"></i>
                        </div>
                        <h5 class="card-title">ยอดขายทั้งหมด @ViewBag.counttotal รายการ</h5>
                        <div class="display-4">@ViewBag.totalincome.ToString("#,###.00")</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4" style="margin-bottom:2%;color:#03cc75">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-hand-holding-usd mr-2"></i>
                        </div>
                        <h5 class="card-title">ชำระเงินเรียบร้อยแล้ว</h5>
                        <div class="display-4">@ViewBag.income</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4" style="margin-bottom:2%;color:#ff0000">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fab fa-creative-commons-nc mr-2"></i>
                        </div>
                        <h5 class="card-title">ค้างชำระเงิน</h5>
                        <div class="display-4">@ViewBag.credit</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row text-white" style="margin-bottom:2%">
            <div class="col-md-12" style="margin-bottom:2%">
                <div class="card bg-info">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-wallet mr-2"></i>
                        </div>
                        <h5 class="card-title">รายการสั่งทั้งหมด</h5>
                        <div class="display-4">800 รายการ</div>
                        <div class="align-text-bottom text-right">รายละเอียดเพิ่มเติม</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row text-white" style="margin-bottom:2%">
            <div class="col-md-6" style="margin-bottom:2%">
                <div class="card bg-info">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-wallet mr-2"></i>
                        </div>
                        <h5 class="card-title">รายการสั่งทั้งหมด</h5>
                        <div class="display-4">800 รายการ</div>
                        <div class="align-text-bottom text-right">รายละเอียดเพิ่มเติม</div>
                    </div>
                </div>
            </div>
        </div>
    </div>