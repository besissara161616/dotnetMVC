<style>
    .xs {
        position: relative;
        font-weight: bold;
        cursor: pointer;
        text-decoration: underline;
    }

        .xs .img {
            position: absolute;
            transform: translate();
            visibility: hidden;
            z-index: 1;
            max-width: 100%;
            height: auto;
        }

        .xs:hover .img {
            visibility: visible;
        }
</style>
<div class="modal fade" id="OrderDetailforOverdue">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5>ข้อมูลรายการสั่งทำที่ : @ViewBag.OrderPrintId</h5>
                <input type="hidden" name="OrderPrintId" id="OrderPrintId" value="@ViewBag.OrderPrintId" />
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--<div class="progress">
                    <div class="progress-bar" role="progressbar"></div>
                </div>
                <hr class="bg-info" />-->
                <div class="card">
                    <div class="card-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>สั่งทำโดย : คุณ @ViewBag.CusFullname</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>สั่งเมื่อวันที่ : @ViewBag.OrderDate.ToString("dd MMMM yyyy")</label>
                                </div>
                                <div class="col-md-6">
                                    <label>กำหนดรับวันที่ : @ViewBag.OrderDue.ToString("dd MMMM yyyy")</label>
                                </div>
                            </div>
                            <!--<div class="row">
                                <div class="col-md-6 offset-3">
                                    <label>เหลือเวลาอีก : @ViewBag.TotalDate.ToString("dd") วัน</label>
                                </div>
                            </div>-->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="table-box">
                                        <div class="table-row">
                                            <div class="table-cell">
                                                <p>รหัสรายการ</p>
                                            </div>
                                            <div class="table-cell">
                                                <p>ชื่อรายการ</p>
                                            </div>
                                            <div class="table-cell">
                                                <p>พื้นที่รวม</p>
                                            </div>
                                            <div class="table-cell">
                                                <p>ราคาต่อหน่วย</p>
                                            </div>
                                            <div class="table-cell">
                                                <p>จำนวน</p>
                                            </div>
                                            <div class="table-cell last-cell">
                                                <p>รวมเป็นเงิน</p>
                                            </div>
                                        </div>
                                        @foreach (var x in ViewBag.OrderList)
                                        {
                                            <div class="table-row">
                                                <div class="table-cell">
                                                    <p>@x.OrdPrintId</p>
                                                </div>
                                                <div class="table-cell">
                                                    <a href="/@x.OrdPrintFile" target="_blank">
                                                        <span class="xs">@x.OrdPrintName <img class="img" id="showImg" src="/@x.OrdPrintFile" /></span><br />
                                                    </a>
                                                    <small>@ViewBag.PrintName ( @x.OrdPrintWidth X @x.OrdPrintHeight )</small>
                                                </div>
                                                <div class="table-cell">
                                                    <p>
                                                        @{
                                                            var sumarea = x.OrdPrintWidth * x.OrdPrintHeight;
                                                        }
                                                        @sumarea
                                                    </p>
                                                </div>
                                                <div class="table-cell">
                                                    <p>@x.OrdPrintPriceset.ToString("#,###.00")</p>
                                                </div>
                                                <div class="table-cell">
                                                    <p>@x.OrdPrintNum.ToString("#,###")</p>
                                                </div>
                                                <div class="table-cell last-cell">
                                                    <p>@x.OrdPrintTotal.ToString("#,###.00")</p>
                                                </div>
                                            </div>
                                        }
                                        <div class="alert alert-danger" align="center">
                                            <h5>รวมเป็นเงิน : <b>@ViewBag.PriceTotal.ToString("#,###.00")</b> บาท</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fas fa-time"></i>ปิดหน้าต่าง</button>
            </div>
        </div>
    </div>
</div>