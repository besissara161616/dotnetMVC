@model IEnumerable<Graphiczone.Models.SQLServer.OrderPrint>
@{
    ViewData["Title"] = "ListWorkStatus";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
    <style>
        .table-head, .table-row {
            display: table;
            width: 100%;
            margin: 10px auto;
            background: transparent;
            padding: 12px 0;
            box-shadow: 0 1px 4px 0 rgba(0,0,50,0.3);
        }

        .table-cell {
            display: table-cell;
            width: 15%;
            text-align: center;
            padding: 5px 0;
            border-right: 1px solid #d6d4d4;
            vertical-align: middle;
            color: #00189f;
        }
    </style>
<div class="table-head" style="background:linear-gradient(to right,#ff007d,#0094ff)">
    <div class="table-cell">
        <p class="text-white" style="font-size:2rem">รายการสถานะงาน</p>
    </div>
</div>

<div id="PlaceHolderHere"></div>

<div class="table-box">
    <div class="table-row">
        <div class="table-cell">
            <p>ลำดับที่</p>
        </div>
        <div class="table-cell">
            <p>รหัสสั่งทำ</p>
        </div>
        <div class="table-cell">
            <p>วันที่สั่งทำ</p>
        </div>
        <div class="table-cell">
            <p>วันที่รับสินค้า</p>
        </div>
        <div class="table-cell">
            <p>สถานะชำระเงิน</p>
        </div>
        <div class="table-cell last-cell">
            <p>ยืนยันสถานะงาน</p>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="table-row">
            <div class="table-cell">
                <p></p>
            </div>
            <div class="table-cell">
                <p>@item.OrPrintId</p>
            </div>
            <div class="table-cell">
                <p>@item.OrPrintDate</p>
            </div>
            <div class="table-cell">
                <p>@item.OrPrintDue</p>
            </div>
            <div class="table-cell">
                <p>@item.OrPrintStatus</p>
            </div>
            <div class="table-cell last-cell">
                <button type="button" class="btn btn-outline-info badge-pill" data-toggle="ajax-modal" 
                        data-target="#Edit" data-url="@Url.Action($"Edit/{item.OrPrintId}")">ปรับปรุงสถานะงาน</button>
            </div>
        </div>
    }
</div>