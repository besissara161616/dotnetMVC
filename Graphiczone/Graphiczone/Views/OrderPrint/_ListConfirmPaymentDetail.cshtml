
@{
    ViewData["Title"] = "_ListConfirmPaymentDetail";
}

    <div class="modal fade" id="ListConfirmPaymentDetail">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>ข้อมูลรายการสั่งทำที่ : @ViewBag.OrderPrintId</h5>
                    <input type="hidden" name="OrderPrintId" id="OrderPrintId" value="@ViewBag.OrderPrintId" />
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar"></div>
                    </div>
                    <hr class="bg-info" />
                    <div class="card">
                        <div class="card-body">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>สั่งทำโดย : คุณ @ViewBag.CusFullname</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>สั่งเมื่อวันที่ : @ViewBag.Orderdate.ToString("dd MMMM yyyy")</label>
                                    </div>
                                    <div class="col-md-6">
                                        <label>กำหนดรับวันที่ : @ViewBag.Orderdue.ToString("dd MMMM yyyy")</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="table-box">
                                            <div class="table-row text-white">
                                                <div class="table-cell-2">
                                                    <p>รหัสรายการ</p>
                                                </div>
                                                <div class="table-cell-2">
                                                    <p>ชื่อรายการ</p>
                                                </div>
                                                <div class="table-cell-2">
                                                    <p>พื้นที่รวม</p>
                                                </div>
                                                <div class="table-cell-2">
                                                    <p>ราคาต่อหน่วย</p>
                                                </div>
                                                <div class="table-cell-2">
                                                    <p>จำนวน</p>
                                                </div>
                                                <div class="table-cell-2 last-cell">
                                                    <p>รวมเป็นเงิน</p>
                                                </div>
                                            </div>
                                            @{
                                                var totalprice = 0;
                                            }

                                            @foreach (var x in ViewBag.OrderList)
                                            {
                                                <div class="table-row">
                                                    <div class="table-cell">
                                                        <p>@x.OrdPrintId</p>
                                                    </div>
                                                    <div class="table-cell">
                                                        <p>@ViewBag.PrintName</p>
                                                        <small>( @x.OrdPrintWidth X @x.OrdPrintHeight )</small>
                                                    </div>
                                                    <div class="table-cell">
                                                        <p>
                                                            @{
                                                                var sumarea = x.OrdPrintWidth * x.OrdPrintHeight;
                                                            }
                                                            @sumarea
                                                        </p>
                                                    </div>
                                                    <div class="table-cell">
                                                        <p>@x.OrdPrintPriceset.ToString("#,###.00")</p>
                                                    </div>
                                                    <div class="table-cell">
                                                        <p>@x.OrdPrintNum.ToString("#,###")</p>
                                                    </div>
                                                    <div class="table-cell last-cell">
                                                        <p>@x.OrdPrintTotal.ToString("#,###.00")</p>
                                                    </div>
                                                </div>
                                                totalprice = totalprice + @Convert.ToInt32(x.OrdPrintTotal);
                                            }

                                            <div class="table-row">
                                                <div class="table-cell last-cell" align="right">
                                                    รวมเป็นเงิน : @totalprice.ToString("#,###.00") บาท
                                                </div>
                                            </div>

                                            <div class="table-row">
                                                <div class="table-cell last-cell" align="right">
                                                    <div>
                                                        <h4 align="center">หลักฐานการชำระเงิน</h4>
                                                    </div>
                                                    <img src="/@ViewBag.ProofFile" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fas fa-time"></i>ปิดหน้าต่าง</button>
                </div>
            </div>
        </div>
    </div>
