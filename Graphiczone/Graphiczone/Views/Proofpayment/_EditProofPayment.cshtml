                                                <p>รหัสรายการ</p>
                                            </div>
                                            <div class="table-cell">
                                                <p>ชื่อรายการ</p>
                                            </div>
                                            <div class="table-cell">
                                                <p>พื้นที่รวม</p>
                                            </div>
                                            <div class="table-cell">
                                                <p>ราคาต่อหน่วย</p>
                                            </div>
                                            <div class="table-cell">
                                                <p>จำนวน</p>
                                            </div>
                                            <div class="table-cell last-cell">
                                                <p>รวมเป็นเงิน</p>
                                            </div>
                                        </div>
                                        @{ var totalprice = 0; }

                                        @foreach (var x in ViewBag.OrderList)
                                        {
                            <div class="table-row">
                                <div class="table-cell">
                                    <p>@x.OrdPrintId</p>
                                </div>
                                <div class="table-cell">
                                    <p>@ViewBag.PrintName</p>
                                    <small>( @x.OrdPrintWidth X @x.OrdPrintHeight )</small>
                                </div>
                                <div class="table-cell">
                                    <p>
                                        @{ var sumarea = x.OrdPrintWidth * x.OrdPrintHeight; }
                                        @sumarea
                                    </p>
                                </div>
                                <div class="table-cell">
                                    <p>@x.OrdPrintPriceset.ToString("#,###.00")</p>
                                </div>
                                <div class="table-cell">
                                    <p>@x.OrdPrintNum.ToString("#,###")</p>
                                </div>
                                <div class="table-cell last-cell">
                                    <p>@x.OrdPrintTotal.ToString("#,###.00")</p>
                                </div>
                            </div>totalprice = totalprice + @Convert.ToInt32(x.OrdPrintTotal);
                                        }

                                        <div class="table-row">
                                            <div class="table-cell last-cell" align="right">
                                                รวมเป็นเงิน : @totalprice.ToString("#,###.00") บาท
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fas fa-time"></i>ปิดหน้าต่าง</button>
            </div>
        </div>
    </div>
</div>
